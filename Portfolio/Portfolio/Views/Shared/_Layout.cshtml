<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <h1>Kevin Barry</h1>
        <nav>
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("Index", "About")">About</a>
            <a href="@Url.Action("Index", "Work")">Work</a>
            <a href="@Url.Action("Index", "Contact")">Contact</a>
        </nav>
    </header>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <footer>
        <div>
            © 2014 Kevin Barry 
        </div>
        <div>
            <a href="@Url.Action("Index", "Home")">Home</a> | <a href="@Url.Action("Index", "About")">About</a> | <a href="@Url.Action("Index", "Work")">Work</a> | <a href="@Url.Action("Index", "Contact")">Contact</a>
        </div>
    </footer>
</body>
</html>
